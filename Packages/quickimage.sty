%arg1=widthRatio arg2=file2 arg3=caption1 [arg4]=additional1
\newcommandx{\singleimage}[4][1=0.8,4=]{
	\begin{figure}[h!]
		\centering
		\includegraphics[width=#1\textwidth]{#2}
		\ifthenelse{\isempty{#3}}{}{
			\caption{#3}		
		}
		\ifthenelse{\isempty{#4}}{}{
			#4 %label
		}
	\end{figure}
}

